generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  STUDENT
  YEAR_LEADER
  FINANCE_OFFICER
  REGISTRAR
  SYSTEM_ADMIN
}

enum ApprovalStatus {
  NOT_STARTED
  PENDING_YEAR_LEADER
  PENDING_FINANCE
  PENDING_REGISTRAR
  APPROVED
  REJECTED
}

model User {
  id             String                 @id @default(uuid())
  supabaseId     String?                @unique @map("supabase_id")
  email          String                 @unique
  fullName       String
  role           Role
  studentId      String?                @unique
  nationalId     String?
  passportNumber String?
  isFirstLogin   Boolean                @default(true)
  facultyId      String?
  faculty        Faculty?               @relation(fields: [facultyId], references: [id])
  programId      String?
  program        Program?               @relation(fields: [programId], references: [id])
  currentYear    Int?
  phoneNumber    String?
  sponsorType    String?
  createdAt      DateTime               @default(now())
  updatedAt      DateTime               @updatedAt
  loginAttempts  Int                    @default(0)
  lockedUntil    DateTime?
  submissions    Submission[]
  approvalLogs   ApprovalLog[]
  documents      RegistrationDocument[]

  @@index([email])
}

model Faculty {
  id          String       @id @default(uuid())
  name        String       @unique
  users       User[]
  programs    Program[]
  submissions Submission[]
  modules     Module[]
}

model Module {
  id        String  @id @default(uuid())
  name      String
  code      String  @unique
  credits   Int
  semester  Int // Semester number (1-8)
  yearLevel Int // Year level (1-4)
  facultyId String
  faculty   Faculty @relation(fields: [facultyId], references: [id])

  @@index([semester, yearLevel])
}

model Program {
  id          String       @id @default(uuid())
  name        String
  facultyId   String
  faculty     Faculty      @relation(fields: [facultyId], references: [id])
  users       User[]
  submissions Submission[]
}

model Submission {
  id               String                 @id @default(uuid())
  studentId        String
  student          User                   @relation(fields: [studentId], references: [id])
  facultyId        String
  faculty          Faculty                @relation(fields: [facultyId], references: [id])
  programId        String
  program          Program                @relation(fields: [programId], references: [id])
  semester         String
  academicYear     String
  enrollmentIntake String
  yearLevel        Int?
  status           ApprovalStatus         @default(PENDING_YEAR_LEADER)
  modules          Json // List of modules selected
  submittedAt      DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  approvalLogs     ApprovalLog[]
  documents        RegistrationDocument[]
}

model ApprovalLog {
  id           String     @id @default(uuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id])
  userId       String
  user         User       @relation(fields: [userId], references: [id])
  action       String // "APPROVED", "REJECTED", "SUBMITTED"
  comments     String?
  createdAt    DateTime   @default(now())
}

model RegistrationDocument {
  id           String     @id @default(uuid())
  submissionId String
  submission   Submission @relation(fields: [submissionId], references: [id])
  fileName     String
  filePath     String
  uploadedBy   String
  uploadedAt   DateTime   @default(now())
  user         User       @relation(fields: [uploadedBy], references: [id])

  @@index([submissionId])
}
