generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String                 @id @default(uuid())
  supabaseId      String?                @unique @map("supabase_id")
  email           String
  fullName        String
  role            Role
  studentId       String?                @unique
  nationalId      String?                @unique
  passportNumber  String?
  isFirstLogin    Boolean                @default(true)
  facultyId       String?
  programId       String?
  currentYear     Int?
  phoneNumber     String?
  sponsorType     String?
  createdAt       DateTime               @default(now())
  updatedAt       DateTime               @updatedAt
  lockedUntil     DateTime?
  loginAttempts   Int                    @default(0)
  staffIdentifier String?                @unique @map("staff_identifier")
  approvalLogs    ApprovalLog[]
  documents       RegistrationDocument[]
  submissions     Submission[]
  notifications   Notification[]
  auditLogsPerformed AuditLog[]          @relation("AuditPerformedBy")
  auditLogsTargeted  AuditLog[]          @relation("AuditTarget")
  faculty         Faculty?               @relation(fields: [facultyId], references: [id])
  program         Program?               @relation(fields: [programId], references: [id])

  @@index([email])
  @@index([role])
}

model Faculty {
  id          String       @id @default(uuid())
  name        String       @unique
  modules     Module[]
  programs    Program[]
  submissions Submission[]
  users       User[]
}

model Module {
  id        String  @id @default(uuid())
  name      String
  code      String  @unique
  credits   Int
  facultyId String
  semester  Int
  yearLevel Int
  faculty   Faculty @relation(fields: [facultyId], references: [id])

  @@index([semester, yearLevel])
}

model Program {
  id          String       @id @default(uuid())
  name        String
  facultyId   String
  faculty     Faculty      @relation(fields: [facultyId], references: [id])
  submissions Submission[]
  users       User[]
}

model Submission {
  id               String                 @id @default(uuid())
  studentId        String
  facultyId        String
  programId        String
  semester         String
  academicYear     String
  status           ApprovalStatus         @default(PENDING_YEAR_LEADER)
  modules          Json
  submittedAt      DateTime               @default(now())
  updatedAt        DateTime               @updatedAt
  enrollmentIntake String
  yearLevel        Int?
  class            String?
  approvalLogs     ApprovalLog[]
  documents        RegistrationDocument[]
  faculty          Faculty                @relation(fields: [facultyId], references: [id])
  program          Program                @relation(fields: [programId], references: [id])
  student          User                   @relation(fields: [studentId], references: [id])
}

model ApprovalLog {
  id           String     @id @default(uuid())
  submissionId String
  userId       String
  action       String
  comments     String?
  createdAt    DateTime   @default(now())
  submission   Submission @relation(fields: [submissionId], references: [id])
  user         User       @relation(fields: [userId], references: [id])
}

model RegistrationDocument {
  id           String     @id @default(uuid())
  submissionId String
  fileName     String
  filePath     String
  uploadedBy   String
  uploadedAt   DateTime   @default(now())
  submission   Submission @relation(fields: [submissionId], references: [id])
  user         User       @relation(fields: [uploadedBy], references: [id])

  @@index([submissionId])
}

enum Role {
  STUDENT
  YEAR_LEADER
  FINANCE_OFFICER
  REGISTRAR
  SYSTEM_ADMIN
}

enum ApprovalStatus {
  NOT_STARTED
  PENDING_YEAR_LEADER
  PENDING_FINANCE
  PENDING_REGISTRAR
  APPROVED
  REJECTED
}

model Notification {
  id        String           @id @default(uuid())
  userId    String
  title     String
  message   String
  type      NotificationType  @default(INFO)
  read      Boolean          @default(false)
  createdAt DateTime         @default(now()) @map("created_at")
  user      User             @relation(fields: [userId], references: [id])

  @@index([userId, read])
  @@index([createdAt])
}

enum NotificationType {
  INFO
  SUCCESS
  WARNING
  ERROR
}

model AuditLog {
  id          String   @id @default(uuid())
  action      String   // e.g., "ACCOUNT_CREATED", "LOGIN_SUCCESS", "LOGIN_FAILED", "PASSWORD_CHANGED"
  performedBy String   // User ID who performed the action
  targetUser  String?  // User ID who was affected (for account creation, etc.)
  details     String?  // Additional details about the action
  ipAddress   String?  // IP address of the user
  createdAt   DateTime @default(now()) @map("created_at")
  
  user        User     @relation("AuditPerformedBy", fields: [performedBy], references: [id])
  target      User?    @relation("AuditTarget", fields: [targetUser], references: [id])

  @@index([performedBy])
  @@index([targetUser])
  @@index([action])
  @@index([createdAt])
}
